<!DOCTYPE html>
<html>
  <head>
    <title>BankApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if current_user %>
      <header class="header">
        <%= link_to 'Home', root_path, class: 'brand' %>
        <%= link_to "Sign Out", user_session_path, data: { "turbo_method": :delete } %>
      </header>
    <% end %>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
